rule css
  command = cleancss --source-map --source-map-inline-sources -o $out $in

rule js
  command = uglifyjs --compress --mangle --source-map-url /$out.map --source-map --output $out -- $in

rule gocompile
  command = env GO111MODULE=on go build -v -i -o $out

build bin/golang-book-www: gocompile | main.go templates.go util.go http.go

build public/golang-book.css: css $
  app/css/normalize.css $
  app/css/fonts.css $
  app/css/main.css $
  app/css/layout.css $
  app/css/book.css $
  app/css/toc.css $
  app/css/multi-step.css

build public/golang-book.js: js $
  app/js/main.js
